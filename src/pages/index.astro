<script>
  let typewriterTimeout: ReturnType<typeof setTimeout> | null = null;
  
  function initTypewriter() {
    const text = "Fullstack developper";
    const el = document.getElementById("typewriter");
    const speed = 100; // millisecondes par lettre
    
    if (!el) return;
    
    // Annuler l'animation prÃ©cÃ©dente si elle existe
    if (typewriterTimeout) {
      clearTimeout(typewriterTimeout);
    }
    
    // RÃ©initialiser le contenu
    el.textContent = "";
    let i = 0;
    
    function type() {
      if (i < text.length && el) {
        el.textContent += text.charAt(i);
        i++;
        typewriterTimeout = setTimeout(type, speed);
      }
    }
    
    // DÃ©marrer l'animation
    type();
  }
  
  // Au chargement avec Astro
  document.addEventListener("astro:page-load", initTypewriter);
</script>
  
